<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/static/bootstrap.min.css">
  <script src="/static/bootstrap.bundle.min.js"></script>
  <script src="/static/jquery-3.5.1.min.js"></script>
  <title>Tablero de mensajes</title>
  <style>
    body{
      margin: 20px;
    }
    h1{
      box-shadow: 0px 3px  black;
    }
    #ParaComentar{
      max-width: 600px;
      margin: 20px;
    }
    #smensaje{
      margin-left: 1150px;
    }
    #post{
      margin: 20px;
    }
  </style>
</head>
<body>
  <h1>The Dojo Message Board</h1>
  <form action="/message" method="POST">
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">Name:</label>
      <input type="name" name="name" class="form-control" id="exampleFormControlInput1" placeholder="">
    </div>
    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label">Message: </label>
      <textarea class="form-control" name="message" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <button type="submit" id="smensaje" class="btn btn-primary">Post Message</button>
  </form>

  <h3>POSTS!</h3> 
  <div id="post">
    <% for(message of messages) { %>
      <div>
          <h3 class="pm">Name: <%= message.name %></h3>
          <h3 class="pm" >Message: <%= message.message %></h3>

          <div id="ParaComentar">
            <% for (comment of message.Comments) { %>
                <p><%="Name: " + comment.cname %></p>
                <p><%="Comment: " + comment.comment %></p>
            <% } %>

            <form action="/comment" method="POST">
              <input type="hidden" name="MessageId" value="<%= message.Id %>">
                <p>Name: </p><input type="text" name="cname">
                <p>Comment: </p><textarea class="form-control" name="comment" id="exampleFormControlTextarea1" rows="3"></textarea>
                <button type="submit" class="btn btn-primary">Post Comment</button>
            </form>
          </div>
      </div>
    <% } %>
  </div>
  
</body>
</html>